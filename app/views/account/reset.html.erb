 <% if !@errors.empty? %>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <div class="alert alert-danger">
      <ul>
        <% @errors.each do |type, msg| %>
          <li><%= msg %></li> 
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-sm-offset-3 col-sm-4">
    <h3>Reset password</h3>
  </div>
</div>

<%= form_tag :reset, method: 'POST', class: 'form-horizontal' do |f| %>
<input type="hidden" name="token" value="<%= @token %>">
<div class="form-group">
  <label for="email" class="col-sm-offset-4 col-sm-1 control-label">email</label>
  <div class="col-sm-3">
    <input type="email" name="email" class="form-control" placeholder="Your email" value="<%= @user.email if @user %>" disabled="true">
  </div>
</div>
<div class="form-group <%= 'has-error' if @errors && @errors[:password] %>">
  <label for="password" class="col-sm-offset-3 col-sm-2 control-label">new password</label>
  <div class="col-sm-3">
    <input type="password" name="password" class="form-control" placeholder="Choose a new password">
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-5 col-sm-3">
    <input type="submit" value="Reset password">
  </div>
</div>
<% end %>
